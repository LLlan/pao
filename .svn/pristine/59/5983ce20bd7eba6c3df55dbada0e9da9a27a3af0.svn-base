<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>鱼刺平台登录</title>

<link rel="stylesheet" href="css/main.css">
</head>

<body>

<div class="anchor-point">
  <div class="loginbox shadow">
            <img class="logo" src="img/SHOP-LOGO.png">
            
            
            
            <div class="info">请输入您的信息!</div>
      
      
           <input class="username text-style" onfocus="if(this.value=='请输入用户名') {this.value='';}; setStyle(this.id)" onblur="if(this.value=='') {this.value='请输入用户名';};setStyle2(this.id)" value="请输入用户名" id="username">
           
            <input class="password text-style" type="password" onfocus="if(this.value=='●●●●●●●●') {this.value='';}; setStyle(this.id)" onblur="if(this.value=='') {this.value='●●●●●●●●';};setStyle2(this.id)" value="●●●●●●●●" id="password">
           
           
           
         
           <button class="login">登 录</button>
           
        
  
  </div>



</div>


<script type="text/javascript">
	function setStyle(x)
		{
			document.getElementById(x).style.border="#8f59d1 2px solid"
		}
	
	
	function setStyle2(x)
		{
			document.getElementById(x).style.border="#e7e7e7 2px solid"
		}



</script>






</body>
</html>
