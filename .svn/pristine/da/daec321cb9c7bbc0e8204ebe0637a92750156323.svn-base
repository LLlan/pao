.tooltip-error { position: absolute; min-width: 160px; max-width: 180px; line-height: 20px; margin: 6px; padding: 6px; color: #a94442; background-color: #f2dede; border-color: #ebccd1; border: 1px solid transparent; border-radius: 4px; z-index: 99; }
.tooltip-error:before, .tooltip-error:after { position: absolute; top: 36px; border: 5px solid transparent; content: " "; }
.tooltip-error.left:after { right: 100%; border-right-color: #f2dede; border-right-width: 5px; }
.tooltip-error .error { font-size: 13px; }
.tooltip-error.bottom:after { top: 100%; border-top-color: #f2dede; border-top-width: 5px; }