@charset "utf-8";
/* CSS Document */


html,body{ width:100%; height:100%; margin:0; padding:0;}

.cover{ width:100%; height:100%; background:rgba(0,0,0,0.7); z-index:100; padding-top:2em;}


.bigbox{ background:url(../images/bg.jpg); width:100%; background-repeat:repeat-x;}

img{ width:100%;}
.anniu{ margin-top:2em;}

.anniu:hover{ opacity:0.8; cursor:pointer;}



.bigbox p{ font-size:1.2em; color:#fff; font-family:"微软雅黑"; margin-bottom:0; background:#f60; line-height:2em; text-align:center; border-radius:8px 8px 0 0;}
.word2{ margin-bottom:2em;}

.bigbox h1{ font-size:1em; color:#333; font-family:"微软雅黑"; margin-top:0; margin-bottom:2.5em; line-height:1.2em;  padding-bottom:.5em; padding-top:.5em; background:rgba(0,0,0,0.1);border-radius:0 0 8px 8px;}



.downloadbox{ background:url(../images/bg.jpg); width:100%;background-size:100%; overflow:hidden;}

.downloadbox p{font-size:1em; color:#666; font-family:"微软雅黑"; font-weight:bold; }


#open{ position:absolute; left:0; top:0; display:none; }